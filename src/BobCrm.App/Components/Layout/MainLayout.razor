@using Microsoft.AspNetCore.Components
@using System.Net.Http.Json

<link rel="stylesheet" href="css/theme.css" />

<div class="app-shell">
    <div class="app-sider">
        <div class="logo"></div>
        <BobCrm.App.Components.Shared.CustomerSider />
    </div>
    <div class="app-main">
        <div class="app-header">
            <div class="brand">BobCRM</div>
            <div class="toolbar">
                <select onchange="bobcrm.setTheme(this.value)" class="w-220" style="height:28px">
                    <option value="light">Light</option>
                    <option value="dark">Dark</option>
                </select>
                <input type="color" oninput="bobcrm.setPrimary(this.value)" value="#3f7cff" title="Primary" style="height:28px;width:42px;border:none;background:transparent" />
                <select onchange="window.changeLang && window.changeLang(this.value)" class="w-220" style="height:28px">
                    <option value="zh">中文</option>
                    <option value="ja" selected>日本語</option>
                    <option value="en">English</option>
                </select>
                <button type="button" class="ant-btn ant-btn-default" onclick="logout()">ログアウト</button>
            </div>
        </div>
        <div class="app-content">
            <div class="app-card">
                @Body
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public RenderFragment? Body { get; set; }
}
