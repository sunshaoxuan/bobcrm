    private async Task LoadTemplates()
    {
        try
        {
            loading = true;
            await InvokeAsync(StateHasChanged);

            var isAuthenticated = await Auth.EnsureAuthenticatedAsync();
            if (!isAuthenticated)
            {
                Nav.NavigateTo("/login", forceLoad: true);
                return;
            }

            // æ„å»º URL å‚æ•°
            var queryParams = new List<string>();
            if (!string.IsNullOrWhiteSpace(filterUsageType))
            {
                queryParams.Add($"usageType={filterUsageType}");
            }
            if (!string.IsNullOrWhiteSpace(filterTemplateType))
            {
                queryParams.Add($"templateType={filterTemplateType}");
            }
            if (groupBy == "entity")
            {
                queryParams.Add("groupBy=entity");
            }

            var url = "/api/templates";
            if (queryParams.Any())
            {
                url += "?" + string.Join("&", queryParams);
            }

            var resp = await Auth.GetWithRefreshAsync(url);

            if (resp.IsSuccessStatusCode)
            {
                var content = await resp.Content.ReadAsStringAsync();

                if (groupBy == "entity")
                {
                    var rawGroups = System.Text.Json.JsonSerializer.Deserialize<List<TemplateGroupByEntity>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });

                    // åº”ç”¨å®¢æˆ·ç«¯æœç´¢è¿‡æ»¤
                    if (!string.IsNullOrWhiteSpace(searchKeyword) && rawGroups != null)
                    {
                        groupedTemplates = rawGroups.Select(g => new TemplateGroupByEntity
                        {
                            EntityType = g.EntityType,
                            Templates = g.Templates.Where(t => t.Name != null && t.Name.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase)).ToList()
                        }).Where(g => g.Templates.Any()).ToList();
                    }
                    else
                    {
                        groupedTemplates = rawGroups;
                    }
                    flatTemplates = null;
                }
                else
                {
                    var rawTemplates = System.Text.Json.JsonSerializer.Deserialize<List<FormTemplate>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });

                    // åº”ç”¨å®¢æˆ·ç«¯æœç´¢è¿‡æ»¤
                    if (!string.IsNullOrWhiteSpace(searchKeyword) && rawTemplates != null)
                    {
                        flatTemplates = rawTemplates.Where(t => t.Name != null && t.Name.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase)).ToList();
                    }
                    else
                    {
                        flatTemplates = rawTemplates;
                    }
                    groupedTemplates = null;
                }
            }
            else
            {
                error = $"åŠ è½½å¤±è´¥: {resp.StatusCode}";
            }

            loading = false;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"[Templates] Load error: {ex.Message}");
            error = ex.Message;
            loading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

