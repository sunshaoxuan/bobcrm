@page "/templates"
@rendermode RenderMode.InteractiveServer
@using BobCrm.App.Models
@inject BobCrm.App.Services.AuthService Auth
@inject BobCrm.App.Services.I18nService I18n
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>模板管理 - OneCRM</PageTitle>

<div style="max-width:1200px; margin:0 auto; padding:24px">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:24px">
        <h2 style="margin:0; color:var(--text); font-size:24px; font-weight:600">模板管理</h2>
        <div style="display:flex; gap:12px; align-items:center">
            <select @onchange="OnGroupByChanged" class="field-control" style="width:200px" value="@groupBy">
                <option value="none">平铺列表</option>
                <option value="entity">按实体分组</option>
            </select>
            <button @onclick="CreateNewTemplate" class="btn btn-primary">
                ➕ 新建模板
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div style="padding:48px; text-align:center; color:var(--muted)">
            加载中...
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <div style="padding:48px; text-align:center">
            <div style="color:#f5222d; font-size:16px; margin-bottom:16px">
                ⚠️ @error
            </div>
        </div>
    }
    else
    {
        @if (groupBy == "entity" && groupedTemplates != null && groupedTemplates.Any())
        {
            @foreach (var group in groupedTemplates)
            {
                <div class="template-section">
                    <h3 class="section-title">@GetEntityDisplayName(group.EntityType)</h3>
                    <div style="display:grid; gap:12px">
                        @foreach (var template in group.Templates)
                        {
                            @RenderTemplateCard(template)
                        }
                    </div>
                </div>
            }
        }
        else if (flatTemplates != null && flatTemplates.Any())
        {
            <div style="display:grid; gap:12px">
                @foreach (var template in flatTemplates)
                {
                    @RenderTemplateCard(template)
                }
            </div>
        }
        else
        {
            <div class="panel info-card">
                <div class="info-icon">ℹ️</div>
                <div class="info-content">
                    <div class="info-title">暂无模板</div>
                    <div class="info-text">
                        点击右上角"新建模板"按钮创建您的第一个表单模板
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(message))
        {
            <Alert Message="@message" Type="@(messageSuccess ? AlertType.Success : AlertType.Error)" ShowIcon="true" />
        }
    }
</div>

<style>
    .template-section {
        margin-bottom: 32px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 12px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--primary);
    }

    .template-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    .template-info {
        flex: 1;
    }

    .template-name {
        font-size: 16px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 4px;
    }

    .template-badges {
        display: flex;
        gap: 8px;
        margin-bottom: 8px;
    }

    .template-desc {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 8px;
    }

    .template-meta {
        font-size: 12px;
        color: var(--muted);
    }

    .template-actions {
        display: flex;
        gap: 8px;
    }

    .info-card {
        border-left: 4px solid var(--primary);
        display: flex;
        gap: 16px;
        align-items: flex-start;
    }

    .info-icon {
        font-size: 24px;
    }

    .info-content {
        flex: 1;
    }

    .info-title {
        font-size: 16px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 8px;
    }

    .info-text {
        font-size: 14px;
        color: var(--muted);
        line-height: 1.6;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(100px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>

@code {
    private bool loading = true;
    private string message = "";
    private bool messageSuccess = false;
    private string? error = null;
    private string groupBy = "none";

    private List<FormTemplate>? flatTemplates;
    private List<TemplateGroupByEntity>? groupedTemplates;

    protected override void OnInitialized()
    {
        I18n.OnChanged += HandleI18nChanged;
    }

    private void HandleI18nChanged()
    {
        try { InvokeAsync(StateHasChanged); } catch { }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        try
        {
            loading = true;
            await InvokeAsync(StateHasChanged);

            var isAuthenticated = await Auth.EnsureAuthenticatedAsync();
            if (!isAuthenticated)
            {
                Nav.NavigateTo("/login", forceLoad: true);
                return;
            }

            var url = groupBy == "entity"
                ? "/api/templates?groupBy=entity"
                : "/api/templates";

            var resp = await Auth.GetWithRefreshAsync(url);

            if (resp.IsSuccessStatusCode)
            {
                var content = await resp.Content.ReadAsStringAsync();

                if (groupBy == "entity")
                {
                    groupedTemplates = System.Text.Json.JsonSerializer.Deserialize<List<TemplateGroupByEntity>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                    flatTemplates = null;
                }
                else
                {
                    flatTemplates = System.Text.Json.JsonSerializer.Deserialize<List<FormTemplate>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                    groupedTemplates = null;
                }
            }
            else
            {
                error = $"加载失败: {resp.StatusCode}";
            }

            loading = false;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"[Templates] Load error: {ex.Message}");
            error = ex.Message;
            loading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async void OnGroupByChanged(ChangeEventArgs e)
    {
        groupBy = e.Value?.ToString() ?? "none";
        await LoadTemplates();
    }

    private void CreateNewTemplate()
    {
        // 导航到设计器创建新模板
        Nav.NavigateTo("/designer/new");
    }

    private void EditTemplate(int templateId)
    {
        Nav.NavigateTo($"/designer/{templateId}");
    }

    private async Task SetAsDefault(int templateId)
    {
        try
        {
            var template = FindTemplate(templateId);
            if (template == null) return;

            var payload = new
            {
                isUserDefault = true
            };

            var client = await Auth.CreateClientWithAuthAsync();
            var resp = await client.PutAsJsonAsync($"/api/templates/{templateId}", payload);

            if (resp.IsSuccessStatusCode)
            {
                ShowMessage("已设置为默认模板", true);
                await LoadTemplates();
            }
            else
            {
                ShowMessage("设置失败", false);
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"[Templates] Set default error: {ex.Message}");
            ShowMessage($"设置失败: {ex.Message}", false);
        }
    }

    private async Task DeleteTemplate(int templateId)
    {
        try
        {
            var confirm = await JS.InvokeAsync<bool>("confirm", "确定要删除此模板吗？");
            if (!confirm) return;

            var resp = await Auth.DeleteWithRefreshAsync($"/api/templates/{templateId}");

            if (resp.IsSuccessStatusCode)
            {
                ShowMessage("模板已删除", true);
                await LoadTemplates();
            }
            else
            {
                var errorMsg = await resp.Content.ReadAsStringAsync();
                ShowMessage($"删除失败: {errorMsg}", false);
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"[Templates] Delete error: {ex.Message}");
            ShowMessage($"删除失败: {ex.Message}", false);
        }
    }

    private RenderFragment RenderTemplateCard(FormTemplate template) => builder =>
    {
        builder.OpenElement(0, "div");
        builder.AddAttribute(1, "class", "card template-card");

        // 模板信息
        builder.OpenElement(2, "div");
        builder.AddAttribute(3, "class", "template-info");

        // 名称
        builder.OpenElement(4, "div");
        builder.AddAttribute(5, "class", "template-name");
        builder.AddContent(6, template.Name);
        builder.CloseElement();

        // 徽章
        builder.OpenElement(7, "div");
        builder.AddAttribute(8, "class", "template-badges");

        if (template.IsUserDefault)
        {
            builder.OpenElement(9, "span");
            builder.AddAttribute(10, "class", "badge badge-default");
            builder.AddContent(11, "用户默认");
            builder.CloseElement();
        }

        if (template.IsSystemDefault)
        {
            builder.OpenElement(12, "span");
            builder.AddAttribute(13, "class", "badge badge-info");
            builder.AddContent(14, "系统默认");
            builder.CloseElement();
        }

        if (!string.IsNullOrWhiteSpace(template.EntityType))
        {
        builder.OpenElement(15, "span");
        builder.AddAttribute(16, "class", "badge badge-success");
            builder.AddContent(17, GetEntityDisplayName(template.EntityType));
            builder.CloseElement();
        }

        builder.CloseElement(); // badges

        // 描述
        if (!string.IsNullOrWhiteSpace(template.Description))
        {
            builder.OpenElement(18, "div");
            builder.AddAttribute(19, "class", "template-desc");
            builder.AddContent(20, template.Description);
            builder.CloseElement();
        }

        // 元数据
        builder.OpenElement(21, "div");
        builder.AddAttribute(22, "class", "template-meta");
        builder.AddContent(23, $"更新于 {template.UpdatedAt:yyyy-MM-dd HH:mm}");
        builder.CloseElement();

        builder.CloseElement(); // template-info

        // 操作按钮
        builder.OpenElement(24, "div");
        builder.AddAttribute(25, "class", "template-actions");

        // 编辑按钮
        builder.OpenElement(26, "button");
        builder.AddAttribute(27, "class", "btn btn-ghost btn-sm");
        builder.AddAttribute(28, "onclick", EventCallback.Factory.Create(this, () => EditTemplate(template.Id)));
        builder.AddContent(29, "编辑");
        builder.CloseElement();

        // 设为默认按钮
        if (!template.IsUserDefault && !string.IsNullOrWhiteSpace(template.EntityType))
        {
            builder.OpenElement(30, "button");
            builder.AddAttribute(31, "class", "btn btn-ghost btn-sm");
            builder.AddAttribute(32, "onclick", EventCallback.Factory.Create(this, () => SetAsDefault(template.Id)));
            builder.AddContent(33, "设为默认");
            builder.CloseElement();
        }

        // 删除按钮
        var canDelete = !template.IsUserDefault && !template.IsSystemDefault && !template.IsInUse;
        builder.OpenElement(34, "button");
        builder.AddAttribute(35, "class", "btn btn-ghost btn-sm");
        builder.AddAttribute(36, "disabled", !canDelete);
        builder.AddAttribute(37, "onclick", EventCallback.Factory.Create(this, () => DeleteTemplate(template.Id)));
        builder.AddContent(38, "删除");
        builder.CloseElement();

        builder.CloseElement(); // template-actions

        builder.CloseElement(); // template-card
    };

    private FormTemplate? FindTemplate(int templateId)
    {
        if (flatTemplates != null)
        {
            return flatTemplates.FirstOrDefault(t => t.Id == templateId);
        }

        if (groupedTemplates != null)
        {
            foreach (var group in groupedTemplates)
            {
                var template = group.Templates.FirstOrDefault(t => t.Id == templateId);
                if (template != null) return template;
            }
        }

        return null;
    }

    private string GetEntityDisplayName(string? entityType)
    {
        return entityType switch
        {
            "customer" => "客户",
            "product" => "产品",
            "order" => "订单",
            null or "" => "未分类",
            _ => entityType
        };
    }

    private void ShowMessage(string msg, bool success)
    {
        message = msg;
        messageSuccess = success;
        StateHasChanged();

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            message = "";
            InvokeAsync(StateHasChanged);
        });
    }

    public void Dispose()
    {
        I18n.OnChanged -= HandleI18nChanged;
    }
}

