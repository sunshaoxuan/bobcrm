@page "/templates"
@rendermode RenderMode.InteractiveServer
@using BobCrm.App.Models
@inject BobCrm.App.Services.AuthService Auth
@inject BobCrm.App.Services.I18nService I18n
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>@I18n.T("TPL_PAGE_TITLE") - OneCRM</PageTitle>

<div style="max-width:1200px; margin:0 auto; padding:24px">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:24px">
        <h2 style="margin:0; color:var(--text); font-size:24px; font-weight:600">@I18n.T("TPL_PAGE_TITLE")</h2>
        <button @onclick="CreateNewTemplate" class="btn btn-primary">
            ‚ûï @I18n.T("BTN_NEW_TEMPLATE")
        </button>
    </div>

    <!-- Á≠õÈÄâÂô® -->
    <div class="panel" style="margin-bottom:24px; display:flex; gap:12px; align-items:center; flex-wrap:wrap;">
        <select @onchange="OnFilterChanged" name="usageType" class="field-control" style="width:150px" value="@filterUsageType">
            <option value="">@I18n.T("LBL_ALL_USAGE")</option>
            <option value="List">@I18n.T("TPL_USAGE_LIST")</option>
            <option value="Detail">@I18n.T("TPL_USAGE_DETAIL")</option>
            <option value="Edit">@I18n.T("TPL_USAGE_EDIT")</option>
        </select>

        <select @onchange="OnFilterChanged" name="templateType" class="field-control" style="width:150px" value="@filterTemplateType">
            <option value="">@I18n.T("LBL_ALL_TYPES")</option>
            <option value="system">@I18n.T("LBL_SYSTEM_TEMPLATE")</option>
            <option value="user">@I18n.T("LBL_USER_TEMPLATE")</option>
        </select>

        <input type="text"
               placeholder="@I18n.T("TPL_SEARCH_PLACEHOLDER")"
               class="field-control"
               style="flex:1; min-width:200px"
               @bind="searchKeyword"
               @bind:event="oninput"
               @onkeyup="OnSearchChanged" />

        <select @onchange="OnGroupByChanged" class="field-control" style="width:150px" value="@groupBy">
            <option value="none">@I18n.T("LBL_FLAT_LIST")</option>
            <option value="entity">@I18n.T("LBL_GROUP_BY_ENTITY")</option>
        </select>

        @if (HasActiveFilters())
        {
            <button @onclick="ClearFilters" class="btn btn-ghost btn-sm">
                @I18n.T("BTN_CLEAR_FILTERS")
            </button>
        }
    </div>

    @if (loading)
    {
        <div style="padding:48px; text-align:center; color:var(--muted)">
            @I18n.T("LBL_LOADING")...
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <div style="padding:48px; text-align:center">
            <div style="color:#f5222d; font-size:16px; margin-bottom:16px">
                ‚ö†Ô∏è @error
            </div>
        </div>
    }
    else
    {
        @if (groupBy == "entity" && groupedTemplates != null && groupedTemplates.Any())
        {
            @foreach (var group in groupedTemplates)
            {
                <div class="template-section">
                    <h3 class="section-title">@GetEntityDisplayName(group.EntityType)</h3>
                    <div style="display:grid; gap:12px">
                        @foreach (var template in group.Templates)
                        {
                            @RenderTemplateCard(template)
                        }
                    </div>
                </div>
            }
        }
        else if (flatTemplates != null && flatTemplates.Any())
        {
            <div style="display:grid; gap:12px">
                @foreach (var template in flatTemplates)
                {
                    @RenderTemplateCard(template)
                }
            </div>
        }
        else
        {
            <div class="panel info-card">
                <div class="info-icon">‚ÑπÔ∏è</div>
                <div class="info-content">
                    <div class="info-title">@I18n.T("MSG_NO_TEMPLATES")</div>
                    <div class="info-text">
                        @I18n.T("MSG_NO_TEMPLATES_HINT")
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(message))
        {
            <Alert Message="@message" Type="@(messageSuccess ? AlertType.Success : AlertType.Error)" ShowIcon="true" />
        }
    }
</div>

