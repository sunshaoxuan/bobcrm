        builder.OpenElement(0, "div");
        builder.AddAttribute(1, "class", "card template-card");

        // Ê®°Êùø‰ø°ÊÅØ
        builder.OpenElement(2, "div");
        builder.AddAttribute(3, "class", "template-info");

        // ÂêçÁß∞
        builder.OpenElement(4, "div");
        builder.AddAttribute(5, "class", "template-name");
        builder.AddContent(6, template.Name);
        builder.CloseElement();

        // ÂæΩÁ´†
        builder.OpenElement(7, "div");
        builder.AddAttribute(8, "class", "template-badges");

        if (template.IsUserDefault)
        {
            builder.OpenElement(9, "span");
            builder.AddAttribute(10, "class", "badge badge-default");
            builder.AddContent(11, $"‚úì {I18n.T("LBL_USER_DEFAULT")}");
            builder.CloseElement();
        }

        if (template.IsSystemDefault)
        {
            builder.OpenElement(12, "span");
            builder.AddAttribute(13, "class", "badge badge-info");
            builder.AddContent(14, $"üîí {I18n.T("LBL_SYSTEM_TEMPLATE")}");
            builder.CloseElement();
        }

        // Áî®ÈÄîÊ†áÁ≠æ
        builder.OpenElement(15, "span");
        builder.AddAttribute(16, "class", GetUsageBadgeClass(template.UsageType));
        builder.AddContent(17, GetUsageDisplayName(template.UsageType));
        builder.CloseElement();

        if (!string.IsNullOrWhiteSpace(template.EntityType))
        {
            builder.OpenElement(18, "span");
            builder.AddAttribute(19, "class", "badge badge-success");
            builder.AddContent(20, GetEntityDisplayName(template.EntityType));
            builder.CloseElement();
        }

        builder.CloseElement(); // badges

        // ÊèèËø∞
        if (!string.IsNullOrWhiteSpace(template.Description))
        {
            builder.OpenElement(18, "div");
            builder.AddAttribute(19, "class", "template-desc");
            builder.AddContent(20, template.Description);
            builder.CloseElement();
        }

        // ÂÖÉÊï∞ÊçÆ
        builder.OpenElement(21, "div");
        builder.AddAttribute(22, "class", "template-meta");
        builder.AddContent(23, $"{I18n.T("LBL_UPDATED_AT")} {template.UpdatedAt:yyyy-MM-dd HH:mm}");
        builder.CloseElement();

        builder.CloseElement(); // template-info

        // Êìç‰ΩúÊåâÈíÆ
        builder.OpenElement(24, "div");
        builder.AddAttribute(25, "class", "template-actions");

        // ÁºñËæëÊåâÈíÆÔºàÁ≥ªÁªüÊ®°Êùø‰∏çÂèØÁºñËæëÔºâ
        if (!template.IsSystemDefault)
        {
            builder.OpenElement(26, "button");
            builder.AddAttribute(27, "class", "btn btn-ghost btn-sm");
            builder.AddAttribute(28, "onclick", EventCallback.Factory.Create(this, () => EditTemplate(template.Id)));
            builder.AddContent(29, $"‚úèÔ∏è {I18n.T("BTN_EDIT_TEMPLATE")}");
            builder.CloseElement();
        }

        // Â§çÂà∂ÊåâÈíÆ
        builder.OpenElement(30, "button");
        builder.AddAttribute(31, "class", "btn btn-ghost btn-sm");
        builder.AddAttribute(32, "onclick", EventCallback.Factory.Create(this, () => CopyTemplate(template.Id)));
        builder.AddContent(33, $"üìã {I18n.T("BTN_COPY")}");
        builder.CloseElement();

        // Â∫îÁî®ÊåâÈíÆÔºàËÆæ‰∏∫ÈªòËÆ§Ôºâ
        if (!template.IsUserDefault && !string.IsNullOrWhiteSpace(template.EntityType))
        {
            builder.OpenElement(34, "button");
            builder.AddAttribute(35, "class", "btn btn-ghost btn-sm");
            builder.AddAttribute(36, "onclick", EventCallback.Factory.Create(this, () => ApplyTemplate(template.Id)));
            builder.AddContent(37, $"‚úì {I18n.T("BTN_APPLY")}");
            builder.CloseElement();
        }

        // Âà†Èô§ÊåâÈíÆ
        var canDelete = !template.IsUserDefault && !template.IsSystemDefault && !template.IsInUse;
        builder.OpenElement(38, "button");
        builder.AddAttribute(39, "class", "btn btn-ghost btn-sm");
        builder.AddAttribute(40, "disabled", !canDelete);
        builder.AddAttribute(41, "onclick", EventCallback.Factory.Create(this, () => DeleteTemplate(template.Id)));
        builder.AddContent(42, $"üóëÔ∏è {I18n.T("BTN_DELETE")}");
        builder.CloseElement();

        builder.CloseElement(); // template-actions

        builder.CloseElement(); // template-card
    };

    private FormTemplate? FindTemplate(int templateId)
    {
        if (flatTemplates != null)
        {
            return flatTemplates.FirstOrDefault(t => t.Id == templateId);
        }

        if (groupedTemplates != null)
        {
            foreach (var group in groupedTemplates)
            {
                var template = group.Templates.FirstOrDefault(t => t.Id == templateId);
                if (template != null) return template;
            }
        }

        return null;
    }

    private string GetEntityDisplayName(string? entityType)
    {
        return entityType switch
        {
            "customer" => "ÂÆ¢Êà∑",
            "product" => "‰∫ßÂìÅ",
            "order" => "ËÆ¢Âçï",
            null or "" => "Êú™ÂàÜÁ±ª",
            _ => entityType
        };
    }

    private string GetUsageDisplayName(BobCrm.App.Models.FormTemplateUsageType usageType)
    {
        return usageType switch
        {
            BobCrm.App.Models.FormTemplateUsageType.List => I18n.T("TPL_USAGE_LIST"),
            BobCrm.App.Models.FormTemplateUsageType.Detail => I18n.T("TPL_USAGE_DETAIL"),
            BobCrm.App.Models.FormTemplateUsageType.Edit => I18n.T("TPL_USAGE_EDIT"),
            _ => usageType.ToString()
        };
    }

    private string GetUsageBadgeClass(BobCrm.App.Models.FormTemplateUsageType usageType)
    {
        return usageType switch
        {
            BobCrm.App.Models.FormTemplateUsageType.List => "badge badge-primary",
            BobCrm.App.Models.FormTemplateUsageType.Detail => "badge badge-success",
            BobCrm.App.Models.FormTemplateUsageType.Edit => "badge badge-warning",
            _ => "badge"
        };
    }

    private void ShowMessage(string msg, bool success)
    {
        message = msg;
        messageSuccess = success;
        StateHasChanged();

        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            message = "";
            InvokeAsync(StateHasChanged);
        });
    }

    public void Dispose()
    {
        I18n.OnChanged -= HandleI18nChanged;
    }
}

