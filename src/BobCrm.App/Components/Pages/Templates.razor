@code {
    private bool loading = true;
    private string message = "";
    private bool messageSuccess = false;
    private string? error = null;
    private string groupBy = "entity";
    private bool isAdmin;
    private bool regenerating;

    // Á≠õÈÄâÂô®
    private string filterUsageType = "";
    private string filterTemplateType = "";
    private string searchKeyword = "";

    private List<AppModels.FormTemplate>? flatTemplates;
    private List<AppModels.TemplateGroupByEntity>? groupedTemplates;

    protected override void OnInitialized()
    {
        I18n.OnChanged += HandleI18nChanged;
    }

    private void HandleI18nChanged()
    {
        try { InvokeAsync(StateHasChanged); } catch { }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await LoadMe();
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        try
        {
            loading = true;
            await InvokeAsync(StateHasChanged);

            var isAuthenticated = await Auth.EnsureAuthenticatedAsync();
            if (!isAuthenticated)
            {
                Nav.NavigateTo("/login", forceLoad: true);
                return;
            }

            // ÊûÑÂª∫ URL ÂèÇÊï∞
            var queryParams = new List<string>();
            if (!string.IsNullOrWhiteSpace(filterUsageType))
            {
                queryParams.Add($"usageType={filterUsageType}");
            }
            if (!string.IsNullOrWhiteSpace(filterTemplateType))
            {
                queryParams.Add($"templateType={filterTemplateType}");
            }
            if (groupBy == "entity")
            {
                queryParams.Add("groupBy=entity");
            }

            var url = "/api/templates";
            if (queryParams.Any())
            {
                url += "?" + string.Join("&", queryParams);
            }

            var resp = await Auth.GetWithRefreshAsync(url);

            if (resp.IsSuccessStatusCode)
            {
                var content = await resp.Content.ReadAsStringAsync();

                if (groupBy == "entity")
                {
                    var rawGroups = System.Text.Json.JsonSerializer.Deserialize<List<AppModels.TemplateGroupByEntity>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });

                    // Â∫îÁî®ÂÆ¢Êà∑Á´ØÊêúÁ¥¢ËøáÊª§
                    if (!string.IsNullOrWhiteSpace(searchKeyword) && rawGroups != null)
                    {
                        groupedTemplates = rawGroups.Select(g => new AppModels.TemplateGroupByEntity
                        {
                            EntityType = g.EntityType,
                            Templates = g.Templates.Where(t => t.Name != null && t.Name.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase)).ToList()
                        }).Where(g => g.Templates.Any()).ToList();
                    }
                    else
                    {
                        groupedTemplates = rawGroups;
                    }
                    flatTemplates = null;
                }
                else
                {
                    var rawTemplates = System.Text.Json.JsonSerializer.Deserialize<List<AppModels.FormTemplate>>(
                        content,
                        new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });

                    // Â∫îÁî®ÂÆ¢Êà∑Á´ØÊêúÁ¥¢ËøáÊª§
                    if (!string.IsNullOrWhiteSpace(searchKeyword) && rawTemplates != null)
                    {
                        flatTemplates = rawTemplates.Where(t => t.Name != null && t.Name.Contains(searchKeyword, StringComparison.OrdinalIgnoreCase)).ToList();
                    }
                    else
                    {
                        flatTemplates = rawTemplates;
                    }
                    groupedTemplates = null;
                }
            }
            else
            {
                error = $"{I18n.T("MSG_LOAD_DATA_FAILED")}: {resp.StatusCode}";
            }

            loading = false;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            error = ex.Message;
            loading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async void OnGroupByChanged(ChangeEventArgs e)
    {
        groupBy = e.Value?.ToString() ?? "none";
        await LoadTemplates();
    }

    private async Task OnUsageTypeChanged(ChangeEventArgs e)
    {
        filterUsageType = e.Value?.ToString() ?? "";
        await LoadTemplates();
    }

    private async Task OnTemplateTypeChanged(ChangeEventArgs e)
    {
        filterTemplateType = e.Value?.ToString() ?? "";
        await LoadTemplates();
    }

    private async Task OnSearchChanged(KeyboardEventArgs e)
    {
        await LoadTemplates();
    }

    private async Task ClearFilters()
    {
        filterUsageType = "";
        filterTemplateType = "";
        searchKeyword = "";
        await LoadTemplates();
    }

    private async Task LoadMe()
    {
        try
        {
            var resp = await Auth.GetWithRefreshAsync("/api/auth/me");
            if (!resp.IsSuccessStatusCode) return;
            var me = await resp.Content.ReadFromJsonAsync<JsonElement>();
            if (me.TryGetProperty("roles", out var roles) && roles.ValueKind == JsonValueKind.Array)
            {
                isAdmin = roles.EnumerateArray().Any(r => string.Equals(r.GetString(), "admin", StringComparison.OrdinalIgnoreCase));
            }
            else if (me.TryGetProperty("role", out var roleProp))
            {
                var role = roleProp.GetString();
                isAdmin = string.Equals(role, "admin", StringComparison.OrdinalIgnoreCase);
            }
        }
        catch
        {
            isAdmin = false;
        }
    }

    private bool HasActiveFilters()
    {
        return !string.IsNullOrWhiteSpace(filterUsageType) ||
               !string.IsNullOrWhiteSpace(filterTemplateType) ||
               !string.IsNullOrWhiteSpace(searchKeyword);
    }

    private void CreateNewTemplate()
    {
        // ÂØºËà™Âà∞ËÆæËÆ°Âô®ÂàõÂª∫Êñ∞Ê®°Êùø
        Nav.NavigateTo("/designer/new");
    }

    private void EditTemplate(int templateId)
    {
        Nav.NavigateTo($"/designer/{templateId}");
    }

    private async Task CopyTemplate(int templateId)
    {
        try
        {
            var template = FindTemplate(templateId);
            if (template == null) return;

            var defaultName = $"{template.Name}{I18n.T("LBL_COPY_SUFFIX")}";
            var newName = defaultName;

            RenderFragment nameInput = builder =>
            {
                builder.OpenElement(0, "div");
                builder.OpenComponent<Input<string>>(1);
                builder.AddAttribute(2, "Value", newName);
                builder.AddAttribute(3, "ValueChanged", EventCallback.Factory.Create<string>(this, v => newName = v));
                builder.AddAttribute(4, "Placeholder", defaultName);
                builder.CloseComponent();
                builder.CloseElement();
            };

            var confirmResult = await Modal.ConfirmAsync(new ConfirmOptions
            {
                Title = I18n.T("TPL_PROMPT_COPY_NAME"),
                Content = OneOf.OneOf<string, RenderFragment>.FromT1(nameInput),
                OkText = I18n.T("BTN_OK"),
                CancelText = I18n.T("BTN_CANCEL")
            });

            if (!confirmResult || string.IsNullOrWhiteSpace(newName)) return;

            var payload = new
            {
                name = newName,
                entityType = template.EntityType,
                usageType = template.UsageType,
                description = string.Format(I18n.T("TPL_COPIED_FROM"), template.Name)
            };

            var client = await Auth.CreateClientWithAuthAsync();
            var resp = await client.PostAsJsonAsync($"/api/templates/{templateId}/copy", payload);

            if (resp.IsSuccessStatusCode)
            {
                ShowMessage(I18n.T("MSG_TEMPLATE_COPIED"), true);
                await LoadTemplates();
            }
            else
            {
                var errorMsg = await resp.Content.ReadAsStringAsync();
                ShowMessage($"{I18n.T("MSG_COPY_FAILED")}: {errorMsg}", false);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"{I18n.T("MSG_COPY_FAILED")}: {ex.Message}", false);
        }
    }

    private async Task ApplyTemplate(int templateId)
    {
        try
        {
            var client = await Auth.CreateClientWithAuthAsync();
            var resp = await client.PostAsync($"/api/templates/{templateId}/apply", null);

            if (resp.IsSuccessStatusCode)
            {
                ShowMessage(I18n.T("MSG_TEMPLATE_APPLIED"), true);
                await LoadTemplates();
            }
            else
            {
                var errorMsg = await resp.Content.ReadAsStringAsync();
                ShowMessage($"{I18n.T("MSG_APPLY_FAILED")}: {errorMsg}", false);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"{I18n.T("MSG_APPLY_FAILED")}: {ex.Message}", false);
        }
    }

    private async Task ConfirmRegenerate(string entityType)
    {
        if (regenerating) return;

        var confirm = await Modal.ConfirmAsync(new ConfirmOptions
        {
            Title = I18n.T("TPL_PROMPT_REGENERATE_TITLE"),
            Content = I18n.T("TPL_PROMPT_REGENERATE_CONTENT"),
            OkText = I18n.T("BTN_OK"),
            CancelText = I18n.T("BTN_CANCEL")
        });

        if (!confirm) return;

        await Regenerate(entityType);
    }

    private async Task Regenerate(string entityType)
    {
        regenerating = true;
        try
        {
            var client = await Auth.CreateClientWithAuthAsync();
            var url = $"/api/admin/templates/{entityType}/regenerate";
            Console.WriteLine($"[Templates] Calling regenerate API: {url}");
            
            var resp = await client.PostAsync(url, null);
            var content = await resp.Content.ReadAsStringAsync();
            Console.WriteLine($"[Templates] Response status: {resp.StatusCode}, body: {content}");
            
            if (resp.IsSuccessStatusCode)
            {
                ShowMessage(I18n.T("MSG_REGENERATE_SUCCESS"), true);
                await LoadTemplates();
            }
            else
            {
                ShowMessage($"{I18n.T("MSG_REGENERATE_FAILED")}: {content}", false);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Templates] Exception: {ex}");
            ShowMessage($"{I18n.T("MSG_REGENERATE_FAILED")}: {ex.Message}", false);
        }
        finally
        {
            regenerating = false;
        }
    }

    private async Task ConfirmReset(string entityType)
    {
        if (regenerating) return;

        var confirm = await Modal.ConfirmAsync(new ConfirmOptions
        {
            Title = I18n.T("TPL_PROMPT_RESET_TITLE"),
            Content = I18n.T("TPL_PROMPT_RESET_CONTENT"),
            OkText = I18n.T("BTN_OK"),
            CancelText = I18n.T("BTN_CANCEL"),
            OkType = ButtonType.Primary
        });

        if (!confirm) return;

        await Reset(entityType);
    }

    private async Task Reset(string entityType)
    {
        regenerating = true;
        try
        {
            var client = await Auth.CreateClientWithAuthAsync();
            var url = $"/api/admin/templates/{entityType}/reset";
            Console.WriteLine($"[Templates] Calling reset API: {url}");
            
            var resp = await client.PostAsync(url, null);
            var content = await resp.Content.ReadAsStringAsync();
            Console.WriteLine($"[Templates] Response status: {resp.StatusCode}, body: {content}");
            
            if (resp.IsSuccessStatusCode)
            {
                MessageService.Success(I18n.T("MSG_RESET_SUCCESS"));
                await LoadTemplates();
            }
            else
            {
                MessageService.Error($"{I18n.T("MSG_RESET_FAILED")}: {content}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Templates] Exception: {ex}");
            MessageService.Error($"{I18n.T("MSG_RESET_FAILED")}: {ex.Message}");
        }
        finally
        {
            regenerating = false;
        }
    }

    private async Task DeleteTemplate(int templateId)
    {
        try
        {
            var confirmResult = await Modal.ConfirmAsync(new ConfirmOptions
            {
                Title = I18n.T("TPL_PROMPT_DELETE_TITLE"),
                Content = I18n.T("TPL_PROMPT_DELETE_CONTENT"),
                OkText = I18n.T("BTN_DELETE"),
                CancelText = I18n.T("BTN_CANCEL"),
                OkType = ButtonType.Primary
            });

            if (!confirmResult) return;

            var client = await Auth.CreateClientWithAuthAsync();
            var resp = await client.DeleteAsync($"/api/templates/{templateId}");

            if (resp.IsSuccessStatusCode)
            {
                ShowMessage(I18n.T("MSG_TEMPLATE_DELETED"), true);
                await LoadTemplates();
            }
            else
            {
                var errorMsg = await resp.Content.ReadAsStringAsync();
                ShowMessage($"{I18n.T("MSG_DELETE_FAILED")}: {errorMsg}", false);
            }
        }
        catch (Exception ex)
        {
            ShowMessage($"{I18n.T("MSG_DELETE_FAILED")}: {ex.Message}", false);
        }
    }

    private static bool IsTestTemplate(AppModels.FormTemplate template)
    {
        var userId = template.UserId?.Trim() ?? string.Empty;
        return userId.Equals("test", StringComparison.OrdinalIgnoreCase) ||
               userId.Equals("__test__", StringComparison.OrdinalIgnoreCase);
    }

