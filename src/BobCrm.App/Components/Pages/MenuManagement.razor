        }
    }

    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        _importError = null;
        _importPreview = null;

        try
        {
            var file = e.File;
            if (file.Size > 5 * 1024 * 1024) // 5MB limit
            {
                _importError = I18n.T("MSG_FILE_TOO_LARGE");
                return;
            }

            using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            using var reader = new System.IO.StreamReader(stream);
            _importData = await reader.ReadToEndAsync();

            // 预解析检查格式
            var data = System.Text.Json.JsonSerializer.Deserialize<MenuImportData>(_importData);
            if (data?.Functions == null || data.Functions.Count == 0)
            {
                _importError = I18n.T("MSG_INVALID_IMPORT_FILE");
                return;
            }

            // 获取冲突
            var conflicts = await MenuService.CheckImportConflictsAsync(data.Functions);
            var totalCount = CountNodes(data.Functions);

            _importPreview = new ImportPreview
            {
                TotalCount = totalCount,
                Conflicts = conflicts
            };
        }
        catch (Exception ex)
        {
            _importError = $"{I18n.T("MSG_FILE_PARSE_ERROR")}: {ex.Message}";
        }
    }

    private async Task ConfirmImport()
    {
        if (string.IsNullOrWhiteSpace(_importData) || _importPreview == null)
        {
            return;
        }

        _importing = true;
        try
        {
            var data = System.Text.Json.JsonSerializer.Deserialize<MenuImportData>(_importData);
            if (data == null)
            {
                Message.Error(I18n.T("MSG_INVALID_IMPORT_FILE"));
                return;
            }

            var result = await MenuService.ImportMenusAsync(data.Functions, _mergeStrategy);
            if (result != null)
            {
                Message.Success($"{I18n.T("MSG_IMPORT_SUCCESS")}: {result.Imported} {I18n.T("LBL_IMPORTED")}, {result.Skipped} {I18n.T("LBL_SKIPPED")}");
                _showImportModal = false;
                _importPreview = null;
                _importData = null;
                await LoadTreeAsync();
            }
        }
        catch (Exception ex)
        {
            Message.Error($"{I18n.T("MSG_IMPORT_FAILED")}: {ex.Message}");
        }
        finally
        {
            _importing = false;
        }
    }

    private int CountNodes(List<MenuImportNode> nodes)
    {
        var count = nodes.Count;
        foreach (var node in nodes)
        {
            if (node.Children != null && node.Children.Count > 0)
            {
                count += CountNodes(node.Children);
            }
        }
        return count;
    }

