    }

    private async Task SaveLayout()
    {
        try
        {
            var items = new Dictionary<string, object>();
            for (int i = 0; i < layoutWidgets.Count; i++)
            {
                var w = layoutWidgets[i];
                var key = w.DataField ?? w.Id;

                // 保存完整的尺寸和单位信息，包括 NewLine
