    private static List<ListItem> ParseOptions(string? raw)
    {
        var items = new List<ListItem>();
        if (string.IsNullOrWhiteSpace(raw))
            return items;

        var tokens = raw.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        foreach (var token in tokens)
        {
            var parts = token.Split(':', 2, StringSplitOptions.TrimEntries);
            var value = parts[0];
            var label = parts.Length > 1 ? parts[1] : parts[0];
            if (!string.IsNullOrEmpty(value))
            {
                items.Add(new ListItem { Value = value, Label = label });
            }
        }

        return items;
    }

    private TabWidget? GetActiveTab(TabContainerWidget container, List<TabWidget> tabs)
    {
        if (tabs.Count == 0)
        {
            return null;
        }

        if (!activeTabs.TryGetValue(container.Id, out var activeId) || string.IsNullOrWhiteSpace(activeId))
        {
            activeId = container.ActiveTabId ?? tabs.First().TabId;
            activeTabs[container.Id] = activeId;
        }

        var tab = tabs.FirstOrDefault(t => t.TabId == activeId) ?? tabs.First();
        activeTabs[container.Id] = tab.TabId;
        container.ActiveTabId = tab.TabId;
        return tab;
    }

    private void ActivateTab(TabContainerWidget container, TabWidget tab)
    {
        activeTabs[container.Id] = tab.TabId;
        container.ActiveTabId = tab.TabId;
        foreach (var item in container.Children?.OfType<TabWidget>() ?? Enumerable.Empty<TabWidget>())
        {
            item.IsDefault = item.TabId == tab.TabId;
        }
        selectedWidget = tab;
        StateHasChanged();
    }

    private void AddTab(TabContainerWidget container)
    {
        if (container.Children == null)
        {
            container.Children = new List<DraggableWidget>();
        }

        var index = container.Children.OfType<TabWidget>().Count() + 1;
        var newTab = new TabWidget { Label = $"Tab {index}" };
        container.Children.Add(newTab);
        ActivateTab(container, newTab);
        StateHasChanged();
    }

    private void RemoveTab(TabContainerWidget container, TabWidget tab)
    {
        if (container.Children == null)
        {
            return;
        }

        if ((container.Children.OfType<TabWidget>().Count()) <= 1)
        {
            return;
        }

        container.Children.Remove(tab);
        if (activeTabs.TryGetValue(container.Id, out var activeId) && activeId == tab.TabId)
        {
            var next = container.Children.OfType<TabWidget>().FirstOrDefault();
            if (next != null)
            {
                ActivateTab(container, next);
            }
            else
            {
                activeTabs.Remove(container.Id);
                container.ActiveTabId = null;
            }
        }

        if (selectedWidget == tab)
        {
            selectedWidget = container;
        }

        StateHasChanged();
    }
