@using AntDesign
@using System.Threading.Tasks
@using BobCrm.App.Services
@using BobCrm.App.Models
@using Microsoft.AspNetCore.Components.Routing
@rendermode RenderMode.InteractiveServer
@implements IDisposable
@inject BobCrm.App.Services.AuthService Auth
@inject BobCrm.App.Services.I18nService I18n
@inject IJSRuntime JS
@inject NavigationManager Nav
@inject LayoutState Layout
@inject InteractionState Interaction
@inject ThemeState ThemeState
@inject PreferencesService PrefsService

<div class="app-header">
    <div class="header-meta">
        <div class="header-brand">
            <strong>OneCRM</strong>
            <span>@_headerSubtitle</span>
        </div>
        <MenuButton ActiveDomain="@ActiveDomain" />
    </div>
    <div class="header-utilities">
        <div class="header-utility-group">
            <HeaderLangMenu />
            <NotificationCenter Localizer="I18n.T" />
        </div>
        <div class="theme-toggle">
            <button class="@(IsLightTheme ? "active" : string.Empty)" @onclick="() => SwitchTheme(ThemeState.CalmLight)" title="Calm Light">
                <Icon Type="@IconType.Outline.Bulb" />
            </button>
            <button class="@(IsDarkTheme ? "active" : string.Empty)" @onclick="() => SwitchTheme(ThemeState.CalmDark)" title="Calm Dark">
                <Icon Type="@IconType.Outline.BgColors" />
            </button>
        </div>
        <div class="nav-mode-toggle">
            <button class="@(NavModeButtonClass(LayoutState.NavDisplayMode.Icons))"
                    title="@I18n.T("LBL_NAV_MODE_ICONS")"
                    @onclick="() => ChangeNavMode(LayoutState.NavDisplayMode.Icons)">
                <Icon Type="@IconType.Outline.Appstore" />
            </button>
            <button class="@(NavModeButtonClass(LayoutState.NavDisplayMode.Labels))"
                    title="@I18n.T("LBL_NAV_MODE_TEXT")"
                    @onclick="() => ChangeNavMode(LayoutState.NavDisplayMode.Labels)">
                <span>Ab</span>
            </button>
            <button class="@(NavModeButtonClass(LayoutState.NavDisplayMode.IconText))"
                    title="@I18n.T("LBL_NAV_MODE_BOTH")"
                    @onclick="() => ChangeNavMode(LayoutState.NavDisplayMode.IconText)">
                <Icon Type="@IconType.Outline.ColumnWidth" />
            </button>
        </div>
        <div class="header-actions desktop-only">
            <Button Size="@ButtonSize.Small" Type="@ButtonType.Default" OnClick="ToggleRightPanel">
                <Icon Type="@IconType.Outline.Layout" /> @I18n.T("BTN_WORK_BAR")
            </Button>
            <Button Size="@ButtonSize.Small" Type="@ButtonType.Default" OnClick="DemoStickyBar">
                <Icon Type="@IconType.Outline.Filter" /> @I18n.T("BTN_TOOL_BAR")
            </Button>
            <Button Size="@ButtonSize.Small" Type="@ButtonType.Default" OnClick="DemoBulkBar">
                <Icon Type="@IconType.Outline.Select" /> @I18n.T("BTN_BULK_BAR")
            </Button>
        </div>
        <DomainSelector Domains="@Domains"
                       ActiveDomain="@ActiveDomain"
                       OnDomainChanged="HandleDomainChanged" />
        @if (isAuthenticated)
        {
            <div class="user-profile-group">
                <a href="/profile" class="user-profile-link">
                    <div class="user-avatar">
                        @if (string.IsNullOrWhiteSpace(avatarUrl))
                        {
                            <Icon Type="@IconType.Outline.User" Style="font-size:18px;" />
                        }
                        else
                        {
                            <img src="@avatarUrl" alt="@userName" style="width:100%; height:100%; object-fit:cover" />
                        }
                    </div>
                    <span class="user-name">@userName</span>
                </a>
                <button type="button" class="nav-icon" onclick="logout()" title="@I18n.T("BTN_LOGOUT")">
                    <Icon Type="@IconType.Outline.Poweroff" />
                </button>
            </div>
        }
        else
        {
            <a href="/login" class="btn btn-primary">@I18n.T("BTN_LOGIN")</a>
        }
    </div>
</div>

@code {
    [CascadingParameter] public int I18nRenderVersion { get; set; }
    [Parameter] public List<FunctionMenuNode> Domains { get; set; } = new();
    [Parameter] public FunctionMenuNode? ActiveDomain { get; set; }
    [Parameter] public EventCallback<FunctionMenuNode> OnDomainChanged { get; set; }

    private record BreadcrumbItem(string Label, string Url);

    private bool isAuthenticated = false;
    private string userName = "";
    private string? avatarUrl = null;
    private string _contextLabel = "总览";
    private readonly List<BreadcrumbItem> _breadcrumbs = [];
    private string _headerSubtitle = "Record workspace";
    private static readonly Dictionary<string, (string LabelKey, string Fallback)> RouteLabels = new(StringComparer.OrdinalIgnoreCase)

    {

        [""] = ("MENU_DASHBOARD", "??"),

        ["customers"] = ("MENU_CUSTOMERS", "�q?"),

        ["customers/new"] = ("BTN_NEW_CUSTOMER", "�V���q?"),

        ["customer"] = ("LBL_CUSTOMER_DETAIL", "�q??��"),

        ["templates"] = ("MENU_TEMPLATES", "�͔�"),

        ["files"] = ("MENU_FILES", "����"),

        ["settings"] = ("MENU_SETTINGS", "?�u"),

        ["entity-definitions"] = ("MENU_ENTITY", "?�̒�?"),
        ["organizations"] = ("MENU_ORG", "组织关系"),

        ["dynamic-entity"] = ("MENU_ENTITY", "???��"),

        ["profile"] = ("MENU_PROFILE", "�T���v��")

    };

    protected override void OnInitialized()
    {
        Nav.LocationChanged += HandleLocationChanged;
        ThemeState.OnChanged += HandleThemeChanged;
        BuildNavigationMeta();
    }

    private int _lastI18nRenderVersion = -1;

    protected override void OnParametersSet()
    {
        if (_lastI18nRenderVersion != I18nRenderVersion)
        {
            _lastI18nRenderVersion = I18nRenderVersion;
            BuildNavigationMeta();
        }
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        BuildNavigationMeta();
        try { InvokeAsync(StateHasChanged); } catch { }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // 加载语言
                var saved = await JS.InvokeAsync<string?>("bobcrm.getCookie", "lang");
                var langToLoad = !string.IsNullOrWhiteSpace(saved) ? saved! : "ja";
                await I18n.LoadAsync(langToLoad);
                
                // 检查登录状态并加载用户信息
                isAuthenticated = await Auth.EnsureAuthenticatedAsync();
                
                if (isAuthenticated)
                {
                    var resp = await Auth.GetWithRefreshAsync("/api/auth/me");
                    if (resp.IsSuccessStatusCode)
                    {
                        var userInfo = await resp.Content.ReadFromJsonAsync<UserInfoDto>();
                        userName = userInfo?.UserName ?? "User";
                        // avatarUrl 暂时为空，未来支持头像上传
                    }
                }
                
                await InvokeAsync(StateHasChanged);
                BuildNavigationMeta();
            }
            catch { }
        }
    }

    private bool IsLightTheme => string.Equals(ThemeState.CurrentTheme, ThemeState.CalmLight, StringComparison.OrdinalIgnoreCase);
    private bool IsDarkTheme => string.Equals(ThemeState.CurrentTheme, ThemeState.CalmDark, StringComparison.OrdinalIgnoreCase);

    private void ToggleCollapse() => Layout.ToggleSiderCollapsed();
    private void ToggleOverlay() => Layout.ToggleSiderOverlay();
    private void ToggleRightPanel() => Layout.ToggleRightPanel();
    private async Task SwitchTheme(string theme)
    {
        await ThemeState.SetThemeAsync(theme);
        StateHasChanged();
    }
    private string NavModeButtonClass(LayoutState.NavDisplayMode mode) => Layout.NavMode == mode ? "active" : string.Empty;
    private async Task ChangeNavMode(LayoutState.NavDisplayMode mode)
    {
        if (Layout.NavMode == mode)
        {
            return;
        }

        Layout.SetNavMode(mode);
        var apiValue = PreferencesService.ToApiNavMode(mode);
        try { await JS.InvokeVoidAsync("localStorage.setItem", "navMode", apiValue); } catch { }
        _ = PrefsService.SaveUserSettingsAsync(new PreferencesService.UpdateUserSettingsRequest
        {
            NavDisplayMode = apiValue
        });
    }

    private void DemoStickyBar()
    {
        Interaction.ShowStickyBar("当前筛选：状态=潜在客户, 所属=华北大区",
            new[]
            {
                new InteractionState.StickyAction("重置", InteractionState.InteractionActionTone.Default, async () => { await Task.Delay(0); }),
                new InteractionState.StickyAction("保存视图", InteractionState.InteractionActionTone.Primary, async () => { await Task.Delay(0); })
            });
    }

    private void DemoBulkBar()
    {
        Interaction.ShowBulkBar("已选中 3 条记录", "批量更新", async () => await Task.Delay(0), "取消", async () => await Task.Delay(0));
    }

    private void BuildNavigationMeta()
    {
        var subtitle = I18n.T("TXT_HEADER_SUBTITLE");
        _headerSubtitle = string.IsNullOrWhiteSpace(subtitle) ? "Record workspace" : subtitle!;
        _breadcrumbs.Clear();
        var relative = Nav.ToBaseRelativePath(Nav.Uri);
        var normalized = string.IsNullOrWhiteSpace(relative) ? Array.Empty<string>() : relative.Split('/', StringSplitOptions.RemoveEmptyEntries);
        var currentPath = "";
        foreach (var segment in normalized)
        {
            currentPath = string.IsNullOrEmpty(currentPath) ? segment : $"{currentPath}/{segment}";
            var label = ResolveSegmentLabel(segment, currentPath);
            _breadcrumbs.Add(new BreadcrumbItem(label, "/" + currentPath));
        }
        _contextLabel = _breadcrumbs.LastOrDefault()?.Label ?? "总览";
    }

    private static bool LooksLikeId(string value) => Guid.TryParse(value, out _) || int.TryParse(value, out _);

    private string ResolveSegmentLabel(string segment, string path)
    {
        var label = TryResolveRouteLabel(path);
        if (!string.IsNullOrWhiteSpace(label))
        {
            return label!;
        }

        label = TryResolveRouteLabel(segment);
        if (!string.IsNullOrWhiteSpace(label))
        {
            return label!;
        }

        if (LooksLikeId(segment))
        {
            return $"# {segment[..Math.Min(segment.Length, 6)]}";
        }

        return segment;
    }

    private string? TryResolveRouteLabel(string token)
    {
        if (!RouteLabels.TryGetValue(token, out var meta))
        {
            return null;
        }

        var localized = I18n.T(meta.LabelKey);
        if (!string.IsNullOrWhiteSpace(localized) && !string.Equals(localized, meta.LabelKey, StringComparison.Ordinal))
        {
            return localized!;
        }

        return meta.Fallback;
    }

    public void Dispose()
    {
        Nav.LocationChanged -= HandleLocationChanged;
        ThemeState.OnChanged -= HandleThemeChanged;
    }

    private void HandleThemeChanged()
    {
        try { InvokeAsync(StateHasChanged); } catch { }
    }

    private async Task HandleDomainChanged(FunctionMenuNode domain)
    {
        await OnDomainChanged.InvokeAsync(domain);
    }

    private class UserInfoDto
    {
        public string? UserName { get; set; }
        public string? Email { get; set; }
        public string? Role { get; set; }
    }
}





