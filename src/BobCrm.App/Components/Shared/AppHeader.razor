@using AntDesign
@using System.Threading.Tasks
@using BobCrm.App.Services
@using BobCrm.App.Models
@using Microsoft.AspNetCore.Components.Routing
@rendermode RenderMode.InteractiveServer
@implements IDisposable
@inject BobCrm.App.Services.AuthService Auth
@inject BobCrm.App.Services.I18nService I18n
@inject IJsInteropService JS
@inject NavigationManager Nav
@inject LayoutState Layout
@inject InteractionState Interaction
@inject ThemeState ThemeState
@inject PreferencesService PrefsService

<div class="app-header">
    <div class="header-meta">
        <div class="header-brand">
            <strong>OneCRM</strong>
            <span>@_headerSubtitle</span>
        </div>
        <MenuButton ActiveDomain="@ActiveDomain" />
    </div>
    <div class="header-utilities">
        <DomainSelector Domains="@Domains"
                       ActiveDomain="@ActiveDomain"
                       OnDomainChanged="HandleDomainChanged" />
        @if (isAuthenticated)
        {
            <div class="user-profile-group">
                <a href="/profile" class="user-profile-link">
                    <div class="user-avatar">
                        @if (string.IsNullOrWhiteSpace(avatarUrl))
                        {
                            <Icon Type="@IconType.Outline.User" Style="font-size:18px;" />
                        }
                        else
                        {
                            <img src="@avatarUrl" alt="@userName" style="width:100%; height:100%; object-fit:cover" />
                        }
                    </div>
                    <span class="user-name">@userName</span>
                </a>
                <button type="button" class="nav-icon" onclick="logout()" title="@I18n.T("BTN_LOGOUT")">
                    <Icon Type="@IconType.Outline.Poweroff" />
                </button>
            </div>
        }
        else
        {
            <a href="/login" class="btn btn-primary">@I18n.T("BTN_LOGIN")</a>
        }
    </div>
</div>

@code {
    [CascadingParameter] public int I18nRenderVersion { get; set; }
    [Parameter] public List<FunctionMenuNode> Domains { get; set; } = new();
    [Parameter] public FunctionMenuNode? ActiveDomain { get; set; }
    [Parameter] public EventCallback<FunctionMenuNode> OnDomainChanged { get; set; }

    private record BreadcrumbItem(string Label, string Url);

    private bool isAuthenticated = false;
    private string userName = "";
    private string? avatarUrl = null;
    private string _contextLabel = string.Empty;
    private readonly List<BreadcrumbItem> _breadcrumbs = [];
    private string _headerSubtitle = "Record workspace";
    private static readonly Dictionary<string, string> RouteLabels = new(StringComparer.OrdinalIgnoreCase)
    {
        [""] = "MENU_DASHBOARD",
        ["customers"] = "MENU_CUSTOMERS",
        ["customers/new"] = "BTN_NEW_CUSTOMER",
        ["customer"] = "LBL_CUSTOMER_DETAIL",
        ["templates"] = "MENU_TEMPLATES",
        ["files"] = "MENU_FILES",
        ["settings"] = "MENU_SETTINGS",
        ["entity-definitions"] = "MENU_ENTITY",
        ["organizations"] = "MENU_ORG",
        ["dynamic-entity"] = "MENU_ENTITY",
        ["profile"] = "MENU_PROFILE"
    };

    protected override void OnInitialized()
    {
        Nav.LocationChanged += HandleLocationChanged;
        ThemeState.OnChanged += HandleThemeChanged;
        BuildNavigationMeta();
    }

    private int _lastI18nRenderVersion = -1;

    protected override void OnParametersSet()
    {
        if (_lastI18nRenderVersion != I18nRenderVersion)
        {
            _lastI18nRenderVersion = I18nRenderVersion;
            BuildNavigationMeta();
        }
    }

    private void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        BuildNavigationMeta();
        try { _ = InvokeAsync(StateHasChanged); }
        catch (ObjectDisposedException) { }
        catch (InvalidOperationException) { }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var (_, saved) = await JS.TryInvokeAsync<string?>("bobcrm.getCookie", "lang");
                var langToLoad = !string.IsNullOrWhiteSpace(saved) ? saved! : "ja";
                await I18n.LoadAsync(langToLoad);

                isAuthenticated = await Auth.EnsureAuthenticatedAsync();

                if (isAuthenticated)
                {
                    var resp = await Auth.GetWithRefreshAsync("/api/auth/me");
                    if (resp.IsSuccessStatusCode)
                    {
                        var userInfo = await resp.Content.ReadFromJsonAsync<UserInfoDto>();
                        userName = userInfo?.UserName ?? "User";
                    }
                }
            }
            catch (Exception ex)
            {
                await JS.TryInvokeVoidAsync("console.warn", $"[AppHeader] Init failed: {ex.Message}");
            }
            finally
            {
                await InvokeAsync(StateHasChanged);
                BuildNavigationMeta();
            }
        }
    }

    private bool IsLightTheme => string.Equals(ThemeState.CurrentTheme, ThemeState.CalmLight, StringComparison.OrdinalIgnoreCase);
    private bool IsDarkTheme => string.Equals(ThemeState.CurrentTheme, ThemeState.CalmDark, StringComparison.OrdinalIgnoreCase);

    private void ToggleCollapse() => Layout.ToggleSiderCollapsed();
    private void ToggleOverlay() => Layout.ToggleSiderOverlay();
    private void ToggleRightPanel() => Layout.ToggleRightPanel();
    private async Task SwitchTheme(string theme)
    {
        await ThemeState.SetThemeAsync(theme);
        StateHasChanged();
    }
    private string NavModeButtonClass(NavDisplayMode mode) => Layout.NavMode == mode ? "active" : string.Empty;
    private async Task ChangeNavMode(NavDisplayMode mode)
    {
        if (Layout.NavMode == mode)
        {
            return;
        }

        Layout.SetNavMode(mode);
        var apiValue = PreferencesService.ToApiNavMode(mode);
        await JS.TryInvokeVoidAsync("localStorage.setItem", "navMode", apiValue);
        _ = PrefsService.SaveUserSettingsAsync(new UpdateUserSettingsRequest
        {
            NavDisplayMode = apiValue
        });
    }

    private void DemoStickyBar()
    {
        Interaction.ShowStickyBar(I18n.T("DEMO_STICKY_TEXT"),
            new[]
            {
                new StickyAction(I18n.T("BTN_RESET"), InteractionActionTone.Default, async () => { await Task.Delay(0); }),
                new StickyAction(I18n.T("BTN_SAVE_VIEW"), InteractionActionTone.Primary, async () => { await Task.Delay(0); })
            });
    }

    private void DemoBulkBar()
    {
        Interaction.ShowBulkBar(I18n.T("DEMO_BULK_SELECTED"), I18n.T("BTN_BULK_UPDATE"), async () => await Task.Delay(0), I18n.T("BTN_CANCEL"), async () => await Task.Delay(0));
    }

    private void BuildNavigationMeta()
    {
        var subtitle = I18n.T("TXT_HEADER_SUBTITLE");
        _headerSubtitle = string.IsNullOrWhiteSpace(subtitle) ? "Record workspace" : subtitle!;
        _breadcrumbs.Clear();
        var relative = Nav.ToBaseRelativePath(Nav.Uri);
        var normalized = string.IsNullOrWhiteSpace(relative) ? Array.Empty<string>() : relative.Split('/', StringSplitOptions.RemoveEmptyEntries);
        var currentPath = "";
        foreach (var segment in normalized)
        {
            currentPath = string.IsNullOrEmpty(currentPath) ? segment : $"{currentPath}/{segment}";
            var label = ResolveSegmentLabel(segment, currentPath);
            _breadcrumbs.Add(new BreadcrumbItem(label, "/" + currentPath));
        }
        _contextLabel = _breadcrumbs.LastOrDefault()?.Label ?? I18n.T("LBL_OVERVIEW");
    }

    private static bool LooksLikeId(string value) => Guid.TryParse(value, out _) || int.TryParse(value, out _);

    private string ResolveSegmentLabel(string segment, string path)
    {
        var label = TryResolveRouteLabel(path);
        if (!string.IsNullOrWhiteSpace(label))
        {
            return label!;
        }

        label = TryResolveRouteLabel(segment);
        if (!string.IsNullOrWhiteSpace(label))
        {
            return label!;
        }

        if (LooksLikeId(segment))
        {
            return $"# {segment[..Math.Min(segment.Length, 6)]}";
        }

        return segment;
    }

    private string? TryResolveRouteLabel(string token)
    {
        if (!RouteLabels.TryGetValue(token, out var labelKey))
        {
            return null;
        }

        var localized = I18n.T(labelKey);
        return string.IsNullOrWhiteSpace(localized) ? labelKey : localized!;
    }

    public void Dispose()
    {
        Nav.LocationChanged -= HandleLocationChanged;
        ThemeState.OnChanged -= HandleThemeChanged;
    }

    private void HandleThemeChanged()
    {
        try { _ = InvokeAsync(StateHasChanged); }
        catch (ObjectDisposedException) { }
        catch (InvalidOperationException) { }
    }

    private async Task HandleDomainChanged(FunctionMenuNode domain)
    {
        await OnDomainChanged.InvokeAsync(domain);
    }

    private class UserInfoDto
    {
        public string? UserName { get; set; }
        public string? Email { get; set; }
        public string? Role { get; set; }
    }
}
