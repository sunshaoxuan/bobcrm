@using Microsoft.AspNetCore.Components.Web

<div class="resize-handle-corner"
     draggable="false"
     @onmousedown="OnMouseDown"
     @onmousedown:stopPropagation
     @onmousedown:preventDefault
     @ondragstart:preventDefault="true"
     style="position:absolute; right:2px; bottom:2px; width:10px; height:10px; background:#1890ff; border-radius:2px; cursor:nwse-resize; z-index:30; box-shadow:0 2px 6px rgba(24,144,255,0.35);">
</div>

@code {
    [Parameter, EditorRequired]
    public EventCallback<MouseEventArgs> OnMouseDown { get; set; }
}

