    private string ResolveDisplayName(string? single, MultilingualText? translations)
    {
        if (!string.IsNullOrWhiteSpace(single))
        {
            return single!;
        }

        if (translations == null || translations.Count == 0)
        {
            return string.Empty;
        }

        if (translations.TryGetValue(I18n.CurrentLang, out var current) && !string.IsNullOrWhiteSpace(current))
        {
            return current!;
        }

        foreach (var lang in new[] { "zh", "en", "ja" })
        {
            if (translations.TryGetValue(lang, out var value) && !string.IsNullOrWhiteSpace(value))
            {
                return value!;
            }
        }

        return translations.Values.FirstOrDefault(v => !string.IsNullOrWhiteSpace(v)) ?? string.Empty;
    }
