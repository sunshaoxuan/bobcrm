@* Radio preview component *@
@inject BobCrm.App.Services.I18nService I18n
@using BobCrm.App.Models.Widgets
<div style="display:flex; gap:8px; align-items:center; padding:4px 0">
    <Icon Type="@IconType.Fill.CheckCircle" Style="color:#1890ff; font-size:16px" />
    <span style="color:#999; font-size:12px">@I18n.T("PREVIEW_OPTION_1")</span>
    <Icon Type="@IconType.Outline.CheckCircle" Style="color:#d9d9d9; font-size:16px" />
    <span style="color:#999; font-size:12px">@I18n.T("PREVIEW_OPTION_2")</span>
</div>

@code {
    [Parameter, EditorRequired] public RadioWidget Widget { get; set; } = default!;
}
