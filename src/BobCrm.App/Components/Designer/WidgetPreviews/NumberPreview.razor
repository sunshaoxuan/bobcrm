@* Number 设计态预览组件 *@
<div style="height:32px; background:#fff; border:1px solid #e0e0e0; border-radius:2px; display:flex; align-items:center; padding:0 8px; justify-content:space-between">
    <span style="color:#ccc; font-size:11px">0</span>
    <div style="display:flex; flex-direction:column; gap:2px">
        <Icon Type="@IconType.Outline.CaretUp" Style="color:#999; font-size:8px" />
        <Icon Type="@IconType.Outline.CaretDown" Style="color:#999; font-size:8px" />
    </div>
</div>

@code {
    [Parameter] public object? Widget { get; set; }
}


