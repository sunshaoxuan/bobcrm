@using BobCrm.App.Models.Widgets
@inject BobCrm.App.Services.I18nService I18n

<Divider Plain>标签容器属性</Divider>

<div style="margin-bottom:16px">
    <label style="display:block; font-size:12px; color:#666; margin-bottom:4px">默认激活标签ID</label>
    <Input @bind-Value="Widget.ActiveTabId" Placeholder="tab-1" OnChange="@((string _) => HandleChange())" />
</div>

<div style="margin-bottom:16px; display:flex; justify-content:space-between; align-items:center">
    <label style="font-size:12px; color:#666">动画切换</label>
    <Switch @bind-Value="Widget.Animated" OnChange="@((_) => HandleChange())" />
</div>

<div style="margin-bottom:16px; display:flex; justify-content:space-between; align-items:center">
    <label style="font-size:12px; color:#666">标签居中</label>
    <Switch @bind-Value="Widget.Centered" OnChange="@((_) => HandleChange())" />
</div>

<div style="margin-top:8px; padding:8px; background:#fff7e6; border:1px solid #ffd591; border-radius:4px; font-size:11px; color:#d46b08; line-height:1.4">
    <Icon Type="@IconType.Outline.InfoCircle" Style="margin-right:4px" />
    标签容器需要拖入Tab组件作为子元素
</div>

@code {
    [Parameter, EditorRequired]
    public TabContainerWidget Widget { get; set; } = default!;

    [Parameter]
    public Action? OnPropertyChanged { get; set; }

    private void HandleChange()
    {
        OnPropertyChanged?.Invoke();
    }
}

